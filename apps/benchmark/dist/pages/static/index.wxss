.controls {
  padding: 8rpx 24rpx 0 24rpx;
  margin: 0;
}
.controls button {
  margin-top: 16rpx;
  font-size: 32rpx;
}
.body {
  font-family: Helvetica, arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  background-color: #fff;
  padding: 60rpx;
  margin: 0;
}
.body image {
  max-width: 100%;
}
.body view {
  margin: 30rpx 0;
}
.body .first-child {
  margin-top: 0 !important;
}
.body .last-child {
  margin-bottom: 0 !important;
}
.body .h1,
.body .h2,
.body .h3 {
  margin: 40rpx 0 20rpx;
  padding: 0;
  font-weight: bold;
  position: relative;
}
.body .h1 {
  font-size: 56rpx;
}
.body .h2 {
  font-size: 48rpx;
  border-bottom: 1rpx solid #ccc;
}
.body .h3 {
  font-size: 36rpx;
}
.body .em {
  font-style: italic;
}
.body .pre {
  background-color: #f8f8f8;
  border: 1rpx solid #ccc;
  font-size: 26rpx;
  line-height: 28rpx;
  padding: 12rpx 20rpx;
  border-radius: 6rpx;
  display: block;
  font-family: monospace;
  box-sizing: border-box;
}
.body .pre .code {
  margin: 0;
  padding: 0;
  border: none;
  background: transparent;
}
.body .code {
  display: inline;
  margin: 0 4rpx;
  padding: 0 10rpx;
  white-space: nowrap;
  border: 1rpx solid #eaeaea;
  background-color: #f8f8f8;
  border-radius: 6rpx;
}
.body .blockquote {
  border-left: 8rpx solid #ddd;
  padding: 0 30rpx;
  color: #777;
}
