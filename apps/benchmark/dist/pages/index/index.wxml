<view>
  <view class="controls">
    <button bind:tap="add">新增可用券(100)</button>
    <button bind:tap="deleteAll">删除可用券(all)</button>
    <button bind:tap="addLot">新增可用券(1000)</button>
    <button bind:tap="update">更新可用券(1)</button>
    <button bind:tap="updateAll">更新可用券(all)</button>
    <button bind:tap="deleteOne">删除可用券(1)</button>
    <button bind:tap="add2Lot">新增不可用券(1000)</button>
    <button bind:tap="add2Lot2">新增不可用券(5000)</button>
    <button bind:tap="toggleList">切换到{{show2?'可用券':'不可用券'}}</button>
    <button bind:tap="reLaunch">刷新页面</button>
    <button bind:tap="reLaunch2">进入静态测试</button>
  </view>
  <view wx:if="{{ !show2 }}" class="couponList">
    <view class="title">可用券列表({{ listData.length }})</view>
    <coupon-card wx:for="{{ listData }}" wx:key="id" info="{{ item }}" />
  </view>
  <view wx:else class="couponList">
    <view class="title">不可用券列表({{ listData2.length }})</view>
    <coupon-card wx:for="{{ listData2 }}" wx:key="id" info="{{ item }}" />
  </view>
</view>
