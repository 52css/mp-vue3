.coupon {
  width: 100%;
  height: 260rpx;
  box-sizing: border-box;
  position: relative;
  padding: 24rpx;
  border-bottom: #cba solid 10rpx;
  border-radius: 0 0 10rpx 10rpx;
  font-size: 24rpx;
  margin: 20rpx 0;
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.2);
  color: #654;
}
.coupon.selected {
  border-color: #fc9153;
  background-image: radial-gradient(
    circle at bottom right,
    rgba(252, 145, 83, 0.1) 0,
    #fff 80%
  );
}
.coupon.invalid {
  color: #aaa;
  border-color: #ccc;
}
.coupon.invalid .desc .amount {
  color: #999;
}
.coupon .desc .main {
  font-size: 32rpx;
}
.coupon .desc .amount {
  position: absolute;
  top: 4rpx;
  right: 24rpx;
  color: #432;
}
.coupon .desc .amount .unit {
  display: inline-block;
  font-size: 28rpx;
}
.coupon .desc .amount .num {
  display: inline-block;
  font-size: 84rpx;
}
.coupon .bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 12rpx 24rpx;
  box-sizing: border-box;
  border-top: 1rpx dashed rgba(0, 0, 0, 0.1);
}
.coupon .bottom .limit {
  float: left;
}
.coupon .bottom .detail {
  float: right;
}
